.temp {
  text-align: center;
  font-size: 200rpx;
  line-height: 280rpx;
  opacity: 0.8;
}

.weather {
  text-align: center;
  font-size: 40rpx;
  line-height: 56rpx;
  opacity: 0.65;
}

.weather-wrapper {
  position: relative;
  padding-top: 54rpx;
  padding-bottom: 250rpx;
}

.weather-bg {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.title-24 {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 36rpx;
  margin-bottom: 42rpx;
}

.text-24 {
  font-size: 30rpx;
  line-height: 42rpx;
  opacity: 0.5;
}

.image-24 {
  margin-right: 15rpx;
  width: 36rpx;
  height: 28rpx;
}

.forecast {
  display: flex;
}

.forecast-item {
  display: flex;
  width: 125rpx;
  flex-shrink: 0;
  flex-direction: column;
  align-items: center;
}

.forecast-time {
  font-size: 30rpx;
  line-height: 42rpx;
}

.forecast-image {
  margin-top: 50rpx;
  margin-bottom: 50rpx;
  width: 60rpx;
  height: 60rpx;
}

.forecast-temp {
  font-size: 40rpx;
  line-height: 56rpx;
}

.weather-today {
  display: flex;
  opacity: 0.5;
  left: 20rpx;
  bottom: 0rpx;
  right: 20rpx;
  position: absolute;
  height: 86rpx;
  border-top: 1px solid rgba(0, 0, 0, 0.3);
  align-items: center;
  font-size: 30rpx;
  line-height: 42rpx;
}

.today-arrow {
  margin-left: 15rpx;
  width: 13rpx;
  height: 24rpx;
}

.today-text {
  flex: 1;
}

.location-wrapper {
  margin-bottom: 50rpx;
}

.location {
  display: flex;
  justify-content: center;
}

.location-city {
  font-size: 28rpx;
  line-height: 33rpx;
  opacity: 0.6;
}

.location-text {
  margin-top: 12rpx;
  font-size: 30rpx;
  line-height: 45rpx;
  height: 45rpx;
  opacity: 0.6;
  text-align: center
}

.location-icon {
  width: 21rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
